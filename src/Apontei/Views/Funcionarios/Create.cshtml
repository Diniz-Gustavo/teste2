@model Apontei.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro novo</h1>

<h4>Colaborador</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Sobrenome" class="control-label"></label>
                    <input asp-for="Sobrenome" class="form-control" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Pis" class="control-label"></label>
                    <input asp-for="Pis" class="form-control" />
                    <span asp-validation-for="Pis" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Departamento" class="control-label"></label>
                    <input asp-for="Departamento" class="form-control" />
                    <span asp-validation-for="Departamento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Cargo" class="control-label"></label>
                    <input asp-for="Cargo" class="form-control" />
                    <span asp-validation-for="Cargo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="EmpresaId" class="control-label"></label>
                    <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.EmpresaId"></select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Senha" class="control-label"></label>
                    <input type="password" asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>


                <div class="form-group col-md-6">
                    <label asp-for="Perfil" class="control-label"></label>
                    <select asp-for="Perfil" class="form-control" asp-items="Html.GetEnumSelectList<Perfil>()"></select>
                    <span asp-validation-for="Perfil" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6" action="/img/Foto" method="post" enctype="multipart/form-data">
               
                    <label asp-for="ImagemPerfil"></label>
                    <br />
                    <a class="btn btn-secondary mt-2"  style="max-width:140px; max-height:40px; cursor:pointer;">Escolher foto<input type="file" asp-for="ImagemPerfil" id="ImagemPerfil" accept="*/image" class="custom-file-input" style="bottom:30px;"></a>
                    <span asp-validation-for="ImagemPerfil" for="file"></span>
   
            </div>
            <div class="form-group d-flex justify-content-end">
                <button type="submit" class="btn btn-outline-dark rounded-pill m-2">Salvar</button>
                <a class="btn btn-outline-dark rounded-pill m-2" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
